/* miniprogram/pages/chatbot/chatbot.wxss */
.content {
  width:100%;
  height:100vh;
  margin: 0 auto;
  background-color: #f7f7f7;
}
.content,button {
  font-size: .8rem;
}
.chat {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
  justify-content: space-between;
}
.chat-list {
  margin: .4rem 0;
}
.chat-list li {
  float: left;
  width: 100%;
}
.chat-list li div {
  display: inline-block;
  max-width: 14rem;
  margin: .25rem .9rem;
  padding: .4rem .7rem;
  border-radius: .3rem;
}
.msg-user {
  float: right;
  background-color: #549af8;
  color: #ffffff;
}
.msg-chatbot {
  float: left;
  background-color:#ffffff;
  color: #424242;
}
.options {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.options-single {
  flex-direction: row;
}
.options-multiple {
  flex-direction: column;
}
.options li button {
  padding: .4rem .7rem;
  display: inline-block;
  line-height: normal;
  color: #549af8;
  background-color: #ffffff;
  border-color: #549af8;
  border-style: solid;
  border-width: 1px;
  margin: .5rem .3rem;
}
.options-single li button:active {
  color: #cbe1ff;
}
.options-multiple option,picker button {
  width: 85vw;
  margin: .2rem;
  padding: .4rem .7rem;
  display: inline-block;
  line-height: normal;
  color: #549af8;
  background-color: #ffffff;
  border-color: #549af8;
  border-style: solid;
  border-width: 1px;
  border-radius: .6rem;
  text-align: center;
}
.options-multiple .checked {
  color: #ffffff;
  background-color: #549af8;
}
.confirm-btn {
  line-height: normal;
  float: right;
  margin: .5rem;
  font-size: .8rem;
  padding: .4rem .8rem;
  color: #549af8;
  background-color: #ffffff;
  border-color: #549af8;
  border-style: solid;
  border-width: 1px;
  border-radius: 1.2rem;
}
.confirm-btn.disabled {
  color: #bbbbbb;
  background-color: #f7f7f7;
  border-color: #bbbbbb;
}
.options-selector li button {
  width: 80vw;
}