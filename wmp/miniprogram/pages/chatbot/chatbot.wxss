/* miniprogram/pages/chatbot/chatbot.wxss */
.content {
  width:100%;
  height:100vh;
  margin: 0 auto;
}
.content,button {
  font-size: 12pt;
}
.chat {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
  justify-content: space-between;
}
.chat-list {
  margin: 40rpx 0;
}
.chat-list li {
  float: left;
  width: 100%;
}
.chat-list li div {
  display: inline-block;
  max-width: 70vw;
  margin: 10rpx 36rpx;
  padding: 16rpx 32rpx;
  border-radius: 35rpx;
}
.msg-user {
  float: right;
  background-color: #549af8;
  color: #ffffff;
}
.msg-chatbot {
  float: left;
  background-color:#f5f5f5;
  color: #202020;
}
.options {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.options-single {
  flex-direction: row;
}
.options-multiple {
  flex-direction: column;
}
.options li button {
  padding: 16rpx 28rpx;
  display: inline-block;
  line-height: normal;
  color: #549af8;
  background-color: #ffffff;
  border-color: #549af8;
  border-style: solid;
  border-width: 1px;
  border-radius: 40rpx;
  margin: 20rpx 12rpx;
}
.options-single li button:active {
  color: #cbe1ff;
}
.options-multiple option,picker button {
  width: 85vw;
  margin: 8rpx;
  padding: 16rpx 28rpx;
  display: inline-block;
  line-height: normal;
  color: #549af8;
  background-color: #ffffff;
  border-color: #549af8;
  border-style: solid;
  border-width: 1px;
  border-radius: 40rpx;
  text-align: center;
}
.options-multiple .checked {
  color: #ffffff;
  background-color: #549af8;
}
.confirm-btn {
  line-height: normal;
  float: right;
  margin: 20rpx;
  font-size: 32rpx;
  padding: 16rpx 32rpx;
  color: #549af8;
  background-color: #ffffff;
  border-color: #549af8;
  border-style: solid;
  border-width: 1px;
  border-radius: 40rpx;
}
.confirm-btn.disabled {
  color: #bbbbbb;
  background-color: #f7f7f7;
  border-color: #bbbbbb;
}
.options-selector li button {
  width: 80vw;
}